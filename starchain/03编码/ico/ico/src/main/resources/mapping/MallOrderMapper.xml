<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.starchain.mapper.MallOrderDao" >
    <resultMap id="orderMap" type="com.starchain.po.MallOrder">
        <id property="orderId" column="order_id"/>
        <result property="costumerId" column="costumer_id"/>
        <result property="orderCommodityId" column="order_commodity_id"/>
        <result property="orderCommodityCnt" column="order_commodity_cnt"/>
        <result property="orderPrice" column="order_price"/>
        <result property="orderStatus" column="order_status"/>
        <result property="orderAddress" column="order_address"/>
        <result property="orderPhone" column="order_phone"/>
        <result property="orderCreateTime" column="order_create_time"/>
        <result property="orderCreateDate" column="order_create_date"/>
        <result property="orderUpdateTime" column="order_update_time"/>
        <result property="orderUpdateDate" column="order_update_date"/>
    </resultMap>

    <!--所有的订单信息-->
    <sql id="commodity_columns">
        order_id,costumer_id,order_commodity_id,order_commodity_cnt,order_price,order_status,order_address,order_phone,
        order_create_time,order_create_date,order_update_time,order_update_date
    </sql>


    <!--添加订单-->
    <insert id="addOrder" parameterType="com.starchain.po.MallOrder" keyProperty="order_id" useGeneratedKeys="true">
        INSERT INTO ico_mall_order
        SET order_id=#{orderId},costumer_id=#{costumerId},order_commodity_id=#{orderCommodityId},order_commodity_cnt=#{orderCommodityCnt},
        order_price=#{orderPrice},order_status=#{orderStatus},order_create_time=#{orderCreateTime},order_create_date=#{orderCreateDate}
    </insert>

</mapper>
